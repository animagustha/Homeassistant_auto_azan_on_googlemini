      entity_id: media_player.office_speaker, media_player.family_room_clock
      media_content_id: https://music.watannetwork.com/musicExcel/Azkar2.mp3
      media_content_type: audio/mp3
    service: media_player.play_media
  - data:
      entity_id: media_player.office_speaker, media_player.family_room_clock
      volume_level: '0.7'
    service: media_player.play_media
  alias: Play Azkaar Masa
  trigger:
    - platform: time
    at: "20:00:00"
#######################################################################
  - alias: Play Azkaar Masa
    trigger:
      platform: time
      at: '20:00:00'
    action:
    - service: media_player.play_media
      entity_id: media_player.office_speaker, media_player.family_room_clock
      data:
        media_content_id: https://music.watannetwork.com/musicExcel/Azkar2.mp3
        media_content_type: audio/mp3

  - alias: Play Surah Waqiah
    trigger:
      platform: time
      at: '20:45:00'
    action:
    - service: media_player.play_media
      entity_id: media_player.office_speaker, media_player.family_room_clock
      data:
        media_content_id: https://www.islamcan.com/quran-mp3/alafasy/056-al-waqiah.mp3
        media_content_type: audio/mp3

- alias: Restart HA
  trigger:
    platform: time
    at: 01:00:00
  action:
    - service: homeassistant.restart


################### Morning Azkar ###################
    - action:
      - data:
          entity_id: media_player.sahar_google_mini   # replace with your Google Home's id
          media_content_id: https://myhomepi.tk:8123/local/azkaar.mp3   # replace with your choice of Adhan
          media_content_type: audio/mp3
        service: media_extractor.play_media
      - data:
          entity_id: media_player.sahar_google_mini   # replace with your Google Home's id
          volume_level: '0.2'
        service: media_player.volume_set
      alias: Evening Azkaar
      trigger:
        - platform: sun
          event: sunrise
          offset: "00:00:10"

#########################Surah Waqiah##################################
          - action:
            - data:
                entity_id: media_player.office_speaker, media_player.family_room_clock
                media_content_id: https://www.islamcan.com/quran-mp3/alafasy/056-al-waqiah.mp3
                media_content_type: audio/mp3
              service: media_player.play_media
            - data:
                entity_id: media_player.office_speaker, media_player.family_room_clock
                volume_level: '0.4'
              service: media_player.play_media
            alias: Play Surah Waqiah
            trigger:
              - platform: time
                at: "22:30:00"

